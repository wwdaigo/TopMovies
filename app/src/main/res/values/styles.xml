<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SubTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/loading_text</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
    </style>

    <style name="Title3TextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GeneralTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="ErrorTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ErrorMessageTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
    </style>

</resources>
